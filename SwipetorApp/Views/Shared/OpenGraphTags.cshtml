@using WebLibServer.Utils
@model SwipetorApp.Models.ViewModels.AppshellViewModel


@if (Model.OpenGraphType != null)
{
    <meta property="og:url" content="@Model.Url"/>
    <meta property="og:type" content="@Model.OpenGraphType.GetDescAttr()"/>
    <meta property="og:title" content="@Model.Title"/>
    <meta property="og:description" content="@Model.Description"/>

    @if (Model.Image != null)
    {
        <meta property="og:image" content="@Model.Image"/>
        <meta property="og:image:alt" content="Photo of @Model.Title.Shorten(20)"/>

        <meta property="og:image:secure_url" content="@Model.Image"/>

        if (Model.ImageWidth != null)
        {
            <meta property="og:image:width" content="@Model.ImageWidth"/>
        }

        if (Model.ImageHeight != null)
        {
            <meta property="og:image:height" content="@Model.ImageHeight"/>
        }
    }
}